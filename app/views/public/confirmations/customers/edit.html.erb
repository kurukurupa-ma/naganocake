<% provide(:title, "会員情報編集") %>
<% if flash[:notice] %>
  <div class="alert alert-danger text-center">
     <%= flash[:notice] %>
  </div>
<% end %>
<div class="container">
   <div class="row">
      <div class="col-2">
        <h4>会員情報編集</h4>
      </div>
   </div>
    <div class="row">
        <div class="col-10 col-offset-1">
           <%= form_for(customer) do |f| %>
            <table class="edit_customer">
               <% if flash[:alert] %>
               <div class="alert alert-danger">
                  <%= flash[:alert] %>
               </div>
               <% end %>
               <tr>
                 <th>氏名</th>
                 <td>
                   <span>（姓）</span>
                 </td>
                 <td>
                   <%= f.text_field :first_name %>
                   <span>（名）</span>
                   <%= f.text/field :last_name %>
                 </td>
               </tr>
               <tr>
                 <th>フリガナ</th>
                 <td>
                   <span>（セイ）</span>
                 </td>
                 <td>
                   <%= f.text_field :first_name_kana %>
                   <span>（メイ）</span>
                   <%= f.text_field :last_name_kana %>
                 </td>
               </tr>
               <tr>
                 <th>郵便番号</th>
                 <td></td>
                 <td><%= f.text_field :postal_code %></td>
               </tr>
               <tr>
                 <th>住所</th>
                 <td></td>
                 <td><%= f.text_field :address %></td>
               </tr>
               <tr>
                 <th>電話番号</th>
                 <td></td>
                 <td><%= f.text_field :telephone_number %></td>
               </tr>
               <tr>
                 <th>メールアドレス</th>
                 <td></td>
                 <td><%= f.email_field :email %></td>
               </tr>
            </table>
            <div class="row">
               <div class="col-2">
                  <%= f.submit "編集内容を保存", class="btn btn-ibfo" %>
               </div>
          <% end %>
            <div class="col-3">
               <%= link_to "退会する", customers_unsubscribe_path, class="btn btn-danger" %>
            </div>
          </div>
        </div>
    </div>
</div>