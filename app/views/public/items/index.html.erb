<div class="box list-group">
    <h4>ジャンル検索</h4>
      <% genre = Genre.where(is_active: true) %>
      <% @genres.each do |genre| %>
           <%= link_to items_path(genre_id: genre.id),class: "list-group-item" do %>
           <%= genre.name %>
           <% end %>
      <% end %>
</div>
<div class="container">
    <div class="row">
       <div class="col-3">
         <h1>商品一覧</h1>
       </div>
       <div class="items">
          <% @items.each do |i| %>
            <%= link_to item_path(i) do %>
            <div class="itembox">
                <dl>
                  <dt>商品名</dt>
                   <dd><%= i.name %></dd>
                  <dt>価格</dt>
                   <dd><%= i.price %></dd>
                </dl>
            </div>
       </div>
       <% end %>
      <% end %>
    </div>
</div>