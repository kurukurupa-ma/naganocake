<div class="container">
    <div class="col-4">
       <h4>ショッピングカート</h4>
    </div>
    <div class="col-4">
      
    </div>
    <div class="col-4">
        <% if @cart_items.present? == true %>
          <%= link_to 'カートを空にする', cart_items_destroy_all_path,method: :delete, class: 'btn btn-danger' %>
        <% end %>
    </div>
</div>
<div class="row">
    <div class="col-10 col-offset-1">
       <table class="table table-boedered">
          <thead>
             <tr class="active">
                <th>商品名</th>
                <th>単価（税込）</th>
                <th>数量</th>
                <th>小計</th>
                <th></th>
             </tr>
          </thead>
          <% total = 0 %>
          <% @cart_items.each do |cart_item| %>
          <tbody>
            <tr>
               <td style="line-height: 30px;"><%= attachment_image_tag cart.item, :item_image, style: "width: 50px; height: 30px;", class: "pull-left" %><%= cart.item.name %></td>
               <td style="line-height: 30px;"><%= (cart_item.item.with_tax_price %></td>
               <td><%= form_with model:cart, url:cart_item_path(cart), method: :patch do |f| %>
                   <%= f.hidden_field :item_id, value: cart.item.id %>
                   <%= f.hidden_field :customer_id, value: current_customer.id %>
                   <%= f.hidden_field :amount, value:cart.amount %>
                   <%= f.submit "変更", class: 'btn btn-primary' %>
                   <% end %>
               </td>
               <td style="line-height: 30px;"><%=cart_item.item.subtotle %>円</td>
               <td style="line-height: 30px;"><%= link_to '削除する',cart_item_path(cart), method: :delete, class: 'btn btn-danger' %></td>
               <% 合計金額 += cart_item.subtotle %>
            </tr>
            <% end %>
          </tbody>
       </table>
    </div>
</div>
<div class="row">
    <div class="col-4">
       <%= link_to '買い物を続ける', root_path, class: 'btn btn-primary' %>
    </div>
    <div class="col-3 col-offset-4">
        <table class="table table-bordered">
          <tr>
            <th class="active">合計金額</th><td><%= totle %>円</td>
          </tr>
        </table>
    </div>
    <% if @cart_items.present? == true %>
      <%= link_to new_order_path, class: 'btn btn-success btn-lg' do %>
      <p style= "magin: 0; padding: 10px 40px">情報入力へ進む</p>
      <% end %>
    <% end %>
</div>