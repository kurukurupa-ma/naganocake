<div class="container">
      <div class="row">
          <div class="col-3">
               <h4>注文履歴一覧</h4>
          </div>
      </div>
      <div class="row">
           <div class="col-offsey-1 col-10">
                <table class="table">
                     <tr class="active">
                         <th>購入日時</th>
                         <th>購入者</th>
                         <th>注文個数</th>
                         <th>注文ステータス</th>
                     </tr>
                <% @index_orders.each do |order| %>
                     <tr>
                         <td><%= link_to order.created_at.to_s(:datetime_jp), admin_order_path(order) %></td>
                         <td><%= order.customer.name %></td>
                         <td><%= order_items = OrderItem.where(order_id:order.id) %>
                             <% count = 0 %>
                             <% order_items.each do |order_item| %>
                             <% end %>
                             <%= count %></td>
                         <td><%= order.status %></td>     
                     </tr>
                <% end %>     
                </table>
           </div>
           <div class="col-12">
               <%= paginate @index_orders %>
           </div>
      </div>
</div>