<div class="container">
     <div class="row">
         <div class="col-3">
             <h4>商品詳細</h4>
         </div>
     </div>
     <div class="row">
         <div class="col-offset-1 col-4">
             <%= image_tag @item.get_item_image(100,100) %>
         </div>
         <div class="col-6">
             <dl class="dl-horezontal">
                 <dt>商品名</dt><dd><%= @item.name %></dd><br>
                 <dt>商品説明</dt><dd><%= @item.introduction %></dd><br>
                 <dt>税込み価格（税抜価格）</dt><dd><%=(@item.with_tax_price) %>(<%= @item.price %>)円</dd><br>
                 <dt>販売ステータス</dt><% if @item.is_active ==true %>
                                             <dd>販売中</dd>
                                        <% else %>
                                             <dd>販売停止中</dd>
                                        <% end %>
             </dl>
         </div>
     </div>
     <div class="row">
       <div class="col-offset-3 col-9">
           <link_to '編集する', edit_admin_item_path(@item), class: "btn btn-primary" %>
       </div>
     </div>
</div>