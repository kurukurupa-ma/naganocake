<div class="container">
    <div class="row">
        <div class="col-4">
            <h4><%= @customer.name %>さんの会員情報</h4>
        </div>
    </div>
    <div class="row">
         <div class="col-4">
             <table class="admin_show_customer">
                 <tr class="activ">
                     <th>顧客ID</th>
                     <td><%= @customer.id %>
                         <span class="label label-primary">
                           <% if @customer.is_deleted ==false %>
                              有効
                           <% else %>
                               退会
                           <% end %>
                         </span>
                     </td>
                 </tr>
                 <tr>
                      <th>氏名</th>
                      <td><%= @customer.first_name %> <%= @customer.last_name %></td>
                 </tr>
                 <tr>
                      <th>フリガナ</th>
                      <td><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
                 </tr>
                 <tr>
                      <th>郵便番号</th>
                      <td><%= @customer.postal_code %></td>
                 </tr>
                 <tr>
                      <th>住所</th>
                      <td><%= @customer.address %></td>
                 </tr>
                 <tr>
                      <th>電話番号</th>
                      <td><%= @customer.telephone_number %></td>
                 </tr>
                 <tr>
                      <th>メールアドレス</th>
                      <td><%= @customer.email %></td>
                 </tr>
             </table>
         </div>
    </div>
    <div class="row">
        <div class="col-1">
            <%= link_to "編集", edit_admin_customer_path, class: "btn btn-info" %>
        </div>
        <div class="col-1">
            <%= link_to "注文一覧", admin_order_path(customer_id: @customer.id), class: "btn btn-info" %>
        </div>
    </div>
</div>